<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="580.0" prefWidth="880.0" stylesheets="@/client.css/waiting.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.WaitingRoomController">
   <children>
      <GridPane fx:id="grid" prefHeight="580.0" prefWidth="900.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="251.0" minWidth="10.0" prefWidth="198.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="302.0" minWidth="10.0" prefWidth="240.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="202.0" minWidth="10.0" prefWidth="202.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="141.0" minHeight="0.0" prefHeight="90.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="141.0" minHeight="0.0" prefHeight="116.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="444.0" minHeight="10.0" prefHeight="219.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="83.0" minHeight="10.0" prefHeight="72.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exit" prefHeight="38.0" prefWidth="120.0" stylesheets="@/client.css/waiting.css" text="Exit lobby" GridPane.columnSpan="2">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <GridPane.margin>
                  <Insets left="25.0" />
               </GridPane.margin>
            </Button>
            <Label fx:id="currentLabel" alignment="CENTER" prefHeight="38.0" prefWidth="479.0" stylesheets="@/client.css/waiting.css" text="Waiting for opponents..." GridPane.columnIndex="1" GridPane.columnSpan="3">
               <GridPane.margin>
                  <Insets left="95.0" top="25.0" />
               </GridPane.margin></Label>
            <Button fx:id="startGameButton" mnemonicParsing="false" onAction="#startGame" prefHeight="44.0" prefWidth="267.0" text="Start Game" GridPane.columnIndex="2" GridPane.rowIndex="3">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <TableView fx:id="mainTable" nodeOrientation="LEFT_TO_RIGHT" prefHeight="329.0" prefWidth="239.0" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1" GridPane.rowSpan="2">
              <columns>
                <TableColumn fx:id="playersCol" prefWidth="539.0" text="Current players" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </GridPane>
   </children>
</AnchorPane>
